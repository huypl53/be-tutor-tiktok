{
  "name": "tiktok-be",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start-ts": "nodemon --exec ts-node src/server.ts",
    "clean": "rimraf dist",
    "build": "tsc",
    "watch:build": "tsc --watch",
    "watch:server": "cross-env nodemon './dist/server.js' --watch './dist'",
    "start": "npm-run-all clean build --parallel watch:build watch:server --print-label",
    "tslint:check": "tslint -c tslint.json './src/**/*.{js,ts,tsx}'",
    "prettier": "prettier --write ./src/**/*.{js,ts,tsx,scss}",
    "prettier:check": "prettier --list-different ./src/**/*.{js,ts,tsx,scss}",
    "precommit": "lint-staged",
    "eslint": "eslint --ext js,ts,tsx",
    "lint:fix": "yarn run eslint --fix src",
    "lint:css": "stylelint src/**/*.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^7.12.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "eslint_d": "^12.2.1",
    "express": "^4.18.2",
    "express-winston": "^4.2.0",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "nocache": "^3.0.4",
    "ts-node": "^10.9.1"
  },
  "lint-staged": {
    "**/*.{js,ts,json}": [
      "npm run prettier"
    ]
  },
  "postinstall": "husky install",
  "pre-commit": [
    "lint:fx"
  ]
}
