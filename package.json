{
  "name": "be-tiktok",
  "description": "",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start-ts:dev": "cross-env NODE_PATH=./src nodemon --exec ts-node -r tsconfig-paths/register ./src/server.ts",
    "start-ts:production": "cross-env NODE_ENV=production nodemon --exec ts-node -r tsconfig-paths/register ./src/server.ts",
    "clean": "rimraf dist",
    "build": "tsc",
    "watch:build": "tsc --watch",
    "watch:server": "cross-env NODE_PATH=./dist nodemon './dist/server.js' --watch './dist'",
    "start": "npm-run-all clean build --parallel watch:build watch:server --print-label",
    "tslint:check": "tslint -c tslint.json './src/**/*.{js,ts,tsx}'",
    "prettier": "prettier --write ./src/**/*.{js,ts,tsx,scss}",
    "prettier:check": "prettier --list-different ./src/**/*.{js,ts,tsx,scss}",
    "eslint": "eslint --ext js,ts,tsx",
    "lint:fix": "yarn run eslint --fix src",
    "lint:css": "stylelint src/**/*.css",
    "noEmit": "tsc --noEmit",
    "precommit": "lint-staged",
    "prepare": "npx husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nc-minh/be-tiktok.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nc-minh/be-tiktok/issues"
  },
  "pre-commit": [
    "lint:fix"
  ],
  "homepage": "https://github.com/nc-minh/be-tiktok#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.1",
    "express-winston": "^4.2.0",
    "helmet": "^5.1.0",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.0",
    "nocache": "^3.0.4",
    "ts-node": "^10.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.17.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "nodemon": "^2.0.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.0",
    "rimraf": "^3.0.2",
    "tsc-watch": "^5.0.3",
    "tsconfig-paths": "^4.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.7.3"
  },
  "lint-staged": {
    "src/**/*{js,ts,tsx,scss}": [
      "git add ."
    ]
  },
  "postinstall": "husky install"
}
